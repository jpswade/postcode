{
    "name": "vasildakov/postcode",
    "description": "UK Postcode ValueObject",
    "keywords": ["uk", "post", "postcode", "php", "value object"],
    "homepage": "https://github.com/vasildakov/postcode",
    "license": "MIT",
    "authors": [
        {
            "name": "Vasil Dakov",
            "email": "vasildakov@gmail.com"
        }
    ],
    "require": {
        "php": ">=8"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.7",
        "phpunit/php-code-coverage": "^9.2",
        "vimeo/psalm": "^5.4",
        "fabpot/php-cs-fixer": "^3.13"
    },
    "autoload": {
        "psr-4": {
            "VasilDakov\\Postcode\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "VasilDakov\\Postcode\\": "test/"
        }
    },
    "scripts": {
        "phpcs": "./vendor/bin/phpcs src",
        "phpcbf": "./vendor/bin/phpcbf",
        "test": "./vendor/bin/phpunit --coverage-html ./build/coverage",
        "psalm": "./vendor/bin/psalm --show-info=true"
    }
}
